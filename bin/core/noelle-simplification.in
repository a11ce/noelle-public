#!/bin/bash -e

trap 'echo "error: $(basename $0): line $LINENO"; exit 1' ERR

# LLVM normalizations
n-eval opt \
  -enable-new-pm=0                \
  @noelle_LLVM_ALIAS_ANALYSES@    \
  -mem2reg \
  -early-cse-memssa \
  -licm \
  -simplifycfg \
  -simplifycfg-sink-common=false \
  -instcombine \
  -tailcallelim \
  -loop-simplify \
  -lcssa \
  -licm \
  -loop-unswitch \
  -globalopt \
  -instcombine \
  -ipsccp \
  -dce \
  -gvn \
  -dse \
  -adce \
  -loop-simplify \
  -lcssa \
  -indvars \
  -loop-deletion \
  -instcombine \
  -indvars \
  -lowerswitch \
  -sroa \
  -mergereturn \
  --break-crit-edges \
  -loop-simplify \
  -lcssa \
  $@

# NOELLE normalizations
noelle-norm $3 -o $3

